<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ecl_dateMonth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="try"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:textSize="19sp"/>

    <TextView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ecl_dateDay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ecl_dateMonth"
        android:text="try"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-2dp"
        android:textSize="19sp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_ecl_expImage"
        app:layout_constraintStart_toEndOf="@id/tv_ecl_dateMonth"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="15dp"
        android:src="@mipmap/ic_launcher_round"
        android:scaleType="centerCrop"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ecl_expTitle"
        app:layout_constraintStart_toEndOf="@id/iv_ecl_expImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        android:text="TrialText"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ecl_expDesc"
        app:layout_constraintTop_toBottomOf="@id/tv_ecl_expTitle"
        app:layout_constraintStart_toEndOf="@id/iv_ecl_expImage"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:text="TrialText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ecl_owedOrOwe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin = "15dp"
        android:text="TrialText"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ecl_expAmount"
        app:layout_constraintTop_toBottomOf="@id/tv_ecl_owedOrOwe"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="3dp"
        android:text="TrialText"
        android:textSize="18sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
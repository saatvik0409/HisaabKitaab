<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/rounded_rectangle"
    android:backgroundTint="#FBFBFB"
    android:padding="8dp">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv_gcl_groupImageCard"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_gcl_groupImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/resource_file" /> <!-- Your image goes here -->

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_gcl_groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/cv_gcl_groupImageCard"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_gcl_groupExpStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/cv_gcl_groupImageCard"
        app:layout_constraintTop_toBottomOf="@id/tv_gcl_groupName" />

</androidx.constraintlayout.widget.ConstraintLayout>